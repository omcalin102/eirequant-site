---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const posts = (await getCollection("posts")).sort((a,b)=>a.data.date<b.data.date?1:-1);
---
<BaseLayout title="Blog — EIREQuant">
  <h1 class="text-2xl font-semibold mb-6">Blog</h1>
  <div class="grid gap-6">
    {posts.map(p => (
      <a href={`/blog/${p.slug}/`} class="block rounded-2xl border border-neutral-200 bg-white p-6 hover:scale-[1.01] transition">
        <h2 class="font-semibold">{p.data.title}</h2>
        <p class="text-xs text-neutral-600 mt-1">{p.data.date} · {p.data.type?.toUpperCase?.() ?? ""}</p>
        {p.data.summary && <p class="text-sm text-neutral-700 mt-2">{p.data.summary}</p>}
      </a>
    ))}
  </div>
</BaseLayout>
