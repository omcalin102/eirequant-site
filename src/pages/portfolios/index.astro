---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const items = await getCollection("portfolios");
---
<BaseLayout title="Portfolios â€” EIREQuant">
  <h1 class="text-2xl font-semibold mb-6">Portfolios</h1>
  <div class="grid gap-6 md:grid-cols-2">
    {items.length === 0
      ? <div class="rounded-2xl border border-neutral-200 bg-white p-6">Under construction.</div>
      : items.map((p) => (
        <a href={`/portfolios/${p.slug}/`} class="block rounded-2xl border border-neutral-200 bg-white p-6 hover:scale-[1.01] transition">
          <h2 class="font-semibold">{p.data.name}</h2>
          <p class="text-sm text-neutral-700 mt-2">{p.data.objective}</p>
        </a>
      ))
    }
  </div>
</BaseLayout>
