---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const items = await getCollection("models");
---
<BaseLayout title="Models â€” EIREQuant">
  <h1 class="text-2xl font-semibold mb-6">Models</h1>
  <div class="grid gap-6 md:grid-cols-2">
    {items.map(m => (
      <a href={`/models/${m.slug}/`} class="block rounded-2xl border border-neutral-200 bg-white p-6 hover:scale-[1.01] transition">
        <div class="text-xs uppercase tracking-wide text-neutral-600">{m.data.family}</div>
        <h2 class="font-semibold mt-1">{m.data.name} <span class="text-neutral-600">({m.data.version})</span></h2>
        <p class="text-sm text-neutral-700 mt-2 line-clamp-3">{m.data.synopsis}</p>
      </a>
    ))}
  </div>
</BaseLayout>
